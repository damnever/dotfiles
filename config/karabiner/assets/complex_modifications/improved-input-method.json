{
  "title": "Improved Chinese Input Method",
  "rules": [
    {
      "description": "[Improved Chinese Input Method] UP/Down Paging ('[ ]' -> 'Ctrl p/n')",
      "manipulators": [
        {
          "conditions": [
            {
              "input_sources": [
                {
                  "input_mode_id": "com.apple.inputmethod.SCIM.ITABC",
                  "input_source_id": "com.apple.inputmethod.SCIM.ITABC",
                  "language": "zh-Hans"
                }
              ],
              "type": "input_source_if"
            }
          ],
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "close_bracket"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "input_sources": [
                {
                  "input_mode_id": "com.apple.inputmethod.SCIM.ITABC",
                  "input_source_id": "com.apple.inputmethod.SCIM.ITABC",
                  "language": "zh-Hans"
                }
              ],
              "type": "input_source_if"
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "open_bracket"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
