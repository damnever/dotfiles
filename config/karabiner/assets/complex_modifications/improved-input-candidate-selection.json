{
  "title": "Improved Input Candidate Selection",
  "rules": [
    {
      "description": "[Improved Input Candidate Selection] left_ctrl p/n for up/down paging",
      "manipulators": [
        {
          "conditions": [
            {
              "input_sources": [
                {
                  "language": "^zh-Hans$"
                },
                {
                  "language": "^zh-Hant$"
                },
                {
                  "language": "^yue-Hant$"
                },
                {
                  "language": "^ja$"
                }
              ],
              "type": "input_source_if"
            }
          ],
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
