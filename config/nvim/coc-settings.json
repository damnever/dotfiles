{
  "suggest.enablePreselect": false,
  "suggest.enablePreview": false,
  "suggest.floatEnable": true,
  "suggest.floatConfig": {},
  "suggest.detailField": "preview",
  "suggest.autoTrigger": "always",
  "suggest.noselect": true,
  "suggest.disableKind": false,
  "suggest.disableMenu": false,
  "suggest.fixInsertedWord": true,
  "suggest.detailMaxLength": 111,
  "suggest.maxCompleteItemCount": 48,
  "suggest.removeDuplicateItems": false,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.defaultSortMethod": "alphabetical",
  "diagnostic.enable": true,
  "diagnostic.signPriority": 99,
  "diagnostic.locationlistUpdate": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.level": "hint",
  "diagnostic.enableMessage": "always",
  "diagnostic.messageTarget": "echo",
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.enableSign": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "∙",
  "diagnostic.infoSign": "∙",
  "diagnostic.hintSign": "∙",
  "diagnostic.refreshOnInsertMode": true,
  "signature.enable": true,
  "signature.hideOnTextChange": false,
  "codeLens.enable": false,
  "notification.maxWidth": 128,
  "notification.maxHeight": 12,
  "notification.minProgressWidth": 33,
  "coc.preferences.jumpCommand": "CocJumpCmd",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["go", "python"],
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.source.issues.priority": 98,
  "coc.source.file.ignoreHidden": false,
  "coc.source.file.triggerCharacters": ["/", "."],
  "list.indicator": ">",
  "list.selectedSignText": "*",
  "list.normalMappings": {"v": "action:vsplit", "x": "action:split"},
  "list.insertMappings": {"<C-n>": "normal:j", "<C-p>": "normal:k", "<C-x>": "action:split", "<C-v>": "action:vsplit"},
  "rust-client.channel": "nightly",
  "git.enableGutters": true,
  "git.realtimeGutters": false,
  "git.signPriority": 80,
  "git.branchCharacter": "⎇",
  "git.addedSign.text": "+",
  "git.removedSign.text": "_",
  "git.addGBlameToVirtualText": false,
  "go.checkForUpdates": "ask",
  "go.goplsOptions": {
    "local": "",
    "directoryFilters": ["-.git"],
    "gofumpt": false,
    "usePlaceholders": false,
    "analyses": {
      "fieldalignment": false,
      "nilness": true,
      "shadow": true,
      "unusedparams": true,
      "unusedwrite": true,
      "fillstruct": false
    },
    "codelenses": {
      "generate": true,
      "regenerate_cgo": false,
      "tidy": true,
      "upgrade_dependency": false,
      "vendor": false,
      "gc_details": false
    }
  },
  "go.tags": { "skipUnexported": true },
  "languageserver": {
    /*
    "golang": {  // https://github.com/golang/tools/blob/master/gopls/doc/settings.md
      "command": "gopls",
      "args": ["-remote=auto"],
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/", ".hg/", "vendor/"],
      "requireRootPattern": false,
      "trace.server": "verbose",
      "initializationOptions": { // https://github.com/golang/tools/blob/master/gopls/doc/vim.md#cocnvim
        "local": "",
        "gofumpt": true,
        "staticcheck": false,
        "analyses": {
          "fieldalignment": false,
          "shadow": true,
          "unusedparams": true
        },
        "codelenses": {
          "generate": true,
          "regenerate_cgo": false,
          "test": false,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": false,
          "gc_details": true
        }
      }
    },
    */
    "python": {
      "command": "python",
      "args": [ "-mpyls" ],
      "trace.server": "verbose",
      "filetypes": ["python"],
      "settings": {
        "pyls": {
          "enable": true,
          "commandPath": "",
          "configurationSources": ["pycodestyle"],
          "plugins": {
            "jedi_completion": {
              "enabled": true
            },
            "jedi_hover": {
              "enabled": true
            },
            "jedi_references": {
              "enabled": true
            },
            "jedi_signature_help": {
              "enabled": true
            },
            "jedi_symbols": {
              "enabled": true,
              "all_scopes": true
            },
            "mccabe": {
              "enabled": true,
              "threshold": 15
            },
            "preload": {
              "enabled": true
            },
            "pycodestyle": {
              "enabled": true
            },
            "pydocstyle": {
              "enabled": false,
              "match": "(?!test_).*\\.py",
              "matchDir": "[^\\.].*"
            },
            "pyflakes": {
              "enabled": true
            },
            "rope_completion": {
              "enabled": true
            },
            "yapf": {
              "enabled": true
            }
          }
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"]
    }
  }
}
